<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:id="@+id/layoutRicerca"
        android:background="@drawable/form_ricerca"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtRicerca"
            android:textSize="20sp"
            android:text="Ricerca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_below="@+id/txtRicerca"
            android:id="@+id/spinnerAreaTematica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="textFilter"
            android:id="@+id/txtCampoRicerca"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_below="@+id/spinnerAreaTematica"
            android:hint="Scrivi una parola chiave da cercare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/layoutRicerca"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <TextView
        android:id="@+id/txtTitle"
        android:textColor="#000000"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:text="Corsi Post-Diploma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:id="@+id/txtDescrizione"
        android:textColor="#ff585858"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtTitle"
        android:text="Percorsi formativi pensati per i giovani che ricercano un inserimento in azienda in diverse funzioni, ruoli e settori. Hanno solitamente una lunga durata, una didattica d'aula con lezioni full time, seguita da un'esperienza diretta in azienda (stage)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>